<div class="container">
    <h1 class="text-center">Eat-da-burger</h1>

    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger eat=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger eat=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>


</div>