<h1>Eat-da-burger</h1>

<div>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger eat=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger eat=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Cat</button>
</form>